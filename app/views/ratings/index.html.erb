<h1>Ratings</h1>

<p>Number of ratings: <%= @ratings.count %></p>

<div id="ratings">
  <table class="table table-hover table-striped">
    <thead>
      <th>Beer</th><th>Rating</th><th>User</th>
    </thead>
    <% @ratings.each do |rating| %>
      <tr> <%= render rating %> </tr>
    <% end %>
  </table>
</div>

<p> Latest ratings </p>
<div id="latest_ratings">
  <table class="table table-hover table-striped">
    <thead>
      <th>Beer</th><th>Rating</th><th>User</th>
    </thead>
    <% @recent.each do |rating| %>
      <tr> <%= render rating %> </tr>
    <% end %>
  </table>
</div>

<p> Top breweries </p>
<div id="latest_ratings">
  <table class="table table-hover table-striped">
    <thead>
      <th>Name</th><th>Year</th><th>avg</th><th>Active</th>
    </thead>
    <% @best_breweries.each do |brewery| %>
      <tr>
        <td><%= brewery.name %></td>
        <td><%= brewery.year %></td>
        <td><%= round(brewery.average_rating) %></td>
        <% if not brewery.active  %>
          <td><span class="badge bg-secondary">retired</span></td>
        <% else %>
          <td> <span class="badge bg-secondary">active</span></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>

<p> Top beers </p>
<div id="latest_ratings">
  <table class="table table-hover table-striped">
    <thead>
      <th>Name</th><th>Style</th><th>avg</th>
    </thead>
    <% @best_beers.each do |beer| %>
      <tr>
        <td><%= beer.name %></td>
        <td><%= beer.style.name %></td>
        <td><%= round(beer.average_rating) %></td>
      </tr>
    <% end %>
  </table>
</div>

<p> Top styles </p>
<div id="latest_ratings">
  <table class="table table-hover table-striped">
    <thead>
      <th>Name</th>
    </thead>
    <% @best_styles.each do |style| %>
      <tr>
        <td><%= style.name %></td>
      </tr>
    <% end %>
  </table>
</div>

<p> Most active users </p>
<div id="latest_ratings">
  <table class="table table-hover table-striped">
    <thead>
      <th>Username</th>
    </thead>
    <% @active_users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
      </tr>
    <% end %>
  </table>
</div>

