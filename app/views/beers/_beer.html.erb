<div id="<%= dom_id beer %>">
  <p>
    <strong>Name:</strong>
    <%= beer.name %>
  </p>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= beer.brewery_id %>
  </p>

  <% if beer.ratings.empty? %>
    beer has not yet been rated!
  <% else %>
    <%= beer.average_rating(beer.name) %>
  <% end %>

</div>
