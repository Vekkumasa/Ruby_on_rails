<h1>Breweries</h1>

<p>Number of breweries: <%= @active_breweries.count + @retired_breweries.count %></p>

<div id="active_breweries">
  <table class="table table-hover table-striped">
    <thead>
      <th> Name </th> <th> Year </th>
    </thead>
    <tbody>
      <% @active_breweries.each do |brewery| %>
        <tr>
          <td>
            <%= link_to brewery.name, brewery %>
            <% if not brewery.active  %>
              <span class="badge bg-secondary">retired</span>
            <% end %>
          </td>
        
          <td>
            <strong>Year:</strong>
            <%= brewery.year %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div id="retired_breweries">
  <table class="table table-hover table-striped">
    <tbody>
      <% @retired_breweries.each do |brewery| %>
        <tr>
          <td>
            <%= link_to brewery.name, brewery %>
            <% if not brewery.active  %>
              <span class="badge bg-secondary">retired</span>
            <% end %>
          </td>
        
          <td>
            <strong>Year:</strong>
            <%= brewery.year %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "List of beers", beers_path %><br/>
<%= link_to "New brewery", new_brewery_path if current_user %>