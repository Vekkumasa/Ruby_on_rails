<h1>Breweries</h1>

<p>Number of breweries: <%= @active_breweries.count + @retired_breweries.count %></p>

<% cache "brewerylist", skip_digest: true do %>
  <div id="active_breweries">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Founded</th>
          <th>Beers</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @active_breweries.each do |brewery| %>
          <tr>
            <td><%= link_to brewery.name, brewery %></td>
            <td><%= brewery.year %></td>
            <td><%= brewery.beers.count %></td>
            <td><%= round(brewery.average_rating) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div id="retired_breweries">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Founded</th>
          <th>Beers</th>
          <th>Rating</th>
        </tr>
      </thead>
      <tbody>
        <% @retired_breweries.each do |brewery| %>
          <tr>
            <td><%= link_to brewery.name, brewery %></td>
            <td><%= brewery.year %></td>
            <td><%= brewery.beers.count %></td>
            <td><%= round(brewery.average_rating) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= link_to "List of beers", beers_path %><br/>
<%= link_to "New brewery", new_brewery_path if current_user %>